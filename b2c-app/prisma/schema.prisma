generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  categories  String[] // PostgreSQL native array
  images      String[] // PostgreSQL native array
  description String
  price       Float
  color       String
  switchType  String
  availability Boolean
  ratingValue   Float    @default(0)
  ratingCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  createdAt DateTime @default(now())
}
